---
import Footer from "../components/Footer.astro";
import Metadata from "../components/Metadata.astro";
import Navigation from "../components/Navigation.astro";

export interface Props {
  title: string;
  meta?: {
    title: string;
    description: string;
    image?: string;
  };
}

const { title, meta } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    {
      meta ? (
        <Metadata
          title={meta.title}
          description={meta.description}
          image={meta.image}
        />
      ) : (
        <Metadata title={title} description="Axel Padilla's blog" />
      )
    }
  </head>
  <body class="bg-zinc-50 dark:bg-black pb-8">
    <Navigation />
    <slot />
    <Footer />
  </body>
</html>

<script>
  import flamethrower from "flamethrower-router";
  export const router = flamethrower({
    pageTransitions: true,
    prefetch: "visible",
  });
</script>
